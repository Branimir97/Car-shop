{% extends 'base.html.twig' %}

{% block title %}Edit Vehicle{% endblock %}

{% block body %}
    <h1 class="text-center p-3">Edit vehicle <b><span style="color: #B0413E">{{ vehicle.mark }} {{ vehicle.model }}</span></b></h1>

    <form method="POST" action="{{ path('upload_test') }}" enctype="multipart/form-data">
        <input type="file" name="image">

        <button type="submit" class="btn btn-primary">Upload</button>
    </form>

    <a class="p-3" href="{{ path('vehicle_index') }}"><i class="fas fa-arrow-circle-left"></i> Back to list</a>

    <div class="mt-3 mb-3">
        {{ include('vehicle/_form.html.twig', {'button_label': 'Update'}) }}
        {{ include('vehicle/_delete_form.html.twig') }}
    </div>
{% endblock %}
