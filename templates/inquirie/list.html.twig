{% extends 'base.html.twig' %}

{% block title %}Inquirie list{% endblock %}

{% block body %}

    <h1 class="p-3 text-center">
        <b>
            <span class="bg-light p-1" style="color: darkcyan">Active inquiries</span>
        </b>
    </h1>
    {% if not inquiries %}
        <p class="p-3 text-center bg-light">No inquiries at the moment.</p>
    {% endif %}
    {% for inquirie in inquiries %}
        <div class="one_inquirie text-center" style="background-color: lightyellow">
            <p class="p-3"><strong>Vehicle:</strong><br><i>{{ inquirie.vehicle.mark }} {{ inquirie.vehicle.model }}</i></p>
            <p><strong>Content:</strong><br><i>{{ inquirie.content }}</i></p>
            <p><strong>Contact form sent by:</strong><br><i>{{ inquirie.user.firstName }} {{ inquirie.user.lastName }}</i></p>

            <div class="text-center">
                <a class="btn btn-success" href="{{ path('accept_offer', {id:inquirie.id})}}">Accept offer</a>
                <a class="btn btn-danger" href="{{ path('decline_offer', {id:inquirie.id}) }}">Decline offer</a>
            </div>
        <hr>
        </div>
    {% endfor %}

{% endblock %}

{% block javascripts %}
    <script>
        $(document).ready(function () {
            $("#inquiries").addClass('active');
        })
    </script>
{% endblock %}
