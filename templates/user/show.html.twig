{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1 class="text-center p-3">User <b><span style="color: #B0413E">{{ user.firstName }} {{ user.lastName }}</span></b></h1>

    <a class="p-3" href="{{ path('user_index') }}"><i class="fas fa-arrow-circle-left"></i> Back to list</a>

    <table class="table mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            </tr>
        </tbody>
    </table>
    <div class="text-center">
        <a class="btn btn-success mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Edit user</a>

        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
