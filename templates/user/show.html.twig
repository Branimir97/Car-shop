{% extends 'base.html.twig' %}

{% block title %}User details{% endblock %}

{% block body %}
    <h1 class="p-3 text-center">
        <b>
            <span class="bg-light p-1" style="color: darkcyan">User details</span>
        </b>
    </h1>

    <p class="text-center"><span class="bg-light p-1" style="color: darkcyan">User: <b>{{ user.firstName }} {{ user.lastName }}</b></span></p>

    <a class="p-3" href="{{ path('user_index') }}"><i class="fas fa-arrow-circle-left"></i> Back to list</a>

    <table class="table mt-3">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ user.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ user.lastName }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-success mb-2" href="{{ path('user_edit', {'id': user.id}) }}">Edit user</a>

    <div class="text-center">
        {{ include('user/_delete_form.html.twig') }}
    </div>

{% endblock %}
